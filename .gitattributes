# Data files
*.csv text eol=lf
*.tsv text eol=lf
*.sql text eol=lf
*.graphql text eol=lf
*.gql text eol=lf

# Shell scripts (Unix)
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf

# Docker files
Dockerfile text eol=lf
Dockerfile.* text eol=lf
