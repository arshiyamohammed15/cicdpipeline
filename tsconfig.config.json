{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "../../../config/*": ["config/*"]
    }
  },
  "include": [
    "src/platform/config/infra_config_runner.ts",
    "config/InfraConfig.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
