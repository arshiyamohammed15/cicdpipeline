{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src/edge-agent/shared/storage/**/*.ts",
    "src/vscode-extension/shared/storage/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out"
  ]
}
