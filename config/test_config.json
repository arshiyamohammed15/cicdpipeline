    "logging": {
      "rules": [43, 63, 64, 65, 66, 67, 68, 69, 70, 71, 72, 73, 74, 75],
      "priority": "critical",
      "description": "Logging standards and troubleshooting"
    }
  },
  "test_requirements": {
    "fail_before_pass_after": true,
    "coverage_minimum": 90,
    "simple_english_comments": true,
    "structured_logging": true,
    "receipt_tracking": true,
    "error_handling": true
  }
}
