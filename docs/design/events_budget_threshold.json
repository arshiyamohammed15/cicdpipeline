{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BudgetThresholdExceeded",
  "type": "object",
  "properties": {
    "event_type": { "const": "budget_threshold_exceeded" },
    "event_id": { "type": "string", "format": "uuid" },
    "published_at": { "type": "string", "format": "date-time" },
    "tenant_id": { "type": "string", "format": "uuid" },
    "budget_id": { "type": "string", "format": "uuid" },
    "threshold": { "type": "string", "enum": ["warning_80", "critical_90", "exhausted_100"] },
    "utilization_ratio": { "type": "number" },
    "spent_amount": { "type": "string" },
    "remaining_budget": { "type": "string" },
    "enforcement_action": { "type": "string" },
    "correlation_id": { "type": "string" }
  },
  "required": [
    "event_type",
    "event_id",
    "published_at",
    "tenant_id",
    "budget_id",
    "threshold",
    "utilization_ratio",
    "spent_amount",
    "remaining_budget",
    "enforcement_action"
  ],
  "additionalProperties": false
}
