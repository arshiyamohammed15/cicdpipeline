
{
  "constitution_rules": [
    {
      "rule_id": "DOC-001",
      "title": "Work on One Sub-Feature at a Time",
      "category": "Process Control",
      "enabled": true,
      "severity_level": "Major",
      "version": "2.0.0",
      "effective_date": "2024-01-01",
      "last_updated": "2024-01-01T00:00:00Z",
      "last_updated_by": "constitution@zeroui.com",
      "policy_linkage": {
        "policy_version_ids": ["ZEROUI-COMMENTS-2.0"],
        "policy_snapshot_hash": "unknown"
      },
      "description": "Restricts focus to a single sub-feature per coding session to maintain clarity and prevent scope creep.",
      "requirements": [
        "Identify exactly one sub-feature",
        "Define clear completion criteria",
        "Avoid mixing multiple features"
      ],
      "validation": "Code changes must be traceable to single, well-defined sub-feature.",
      "error_condition": "ERROR:SCOPE_VIOLATION"
    },
    {
      "rule_id": "DOC-002",
      "title": "Enforce 50 LOC Change Limit",
      "category": "Process Control",
      "enabled": true,
      "severity_level": "Major",
      "version": "2.0.0",
      "effective_date": "2024-01-01",
      "last_updated": "2024-01-01T00:00:00Z",
      "last_updated_by": "constitution@zeroui.com",
      "policy_linkage": {
        "policy_version_ids": ["ZEROUI-COMMENTS-2.0"],
        "policy_snapshot_hash": "unknown"
      },
      "description": "Enforces 50-line maximum change limit with explicit override requirement.",
      "requirements": [
        "Count all changed lines",
        "Require LOC_OVERRIDE:<number> for exceptions"
      ],
      "validation": "Total changes (add+modify+delete) ≤50 without override.",
      "error_condition": "ERROR:SIZE_VIOLATION"
    },
