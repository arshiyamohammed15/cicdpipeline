  "severity_levels": {
    "error": {
      "color": "red",
      "exit_code": 1,
      "description": "Critical violation that must be fixed"
    },
    "warning": {
      "color": "yellow", 
      "exit_code": 0,
      "description": "Issue that should be addressed"
    },
    "info": {
      "color": "blue",
      "exit_code": 0,
      "description": "Informational message or positive finding"
    }
  },
  "performance_targets": {
    "startup_time": 2.0,
