    "architecture": {
      "rules": [19, 21, 23, 24, 28],
      "patterns": {
        "mixed_concerns": {
          "file_patterns": {
            "ui_with_logic": ["*.ui", "*.view", "*.template"],
            "logic_in_ui": ["database", "api_call", "business_logic"]
          },
          "severity": "error",
          "message": "Business logic detected in UI layer - separate concerns"
        },
        "local_processing": {
          "keywords": ["cloud", "remote", "external_api"],
          "severity": "info",
          "message": "Consider local-first processing for privacy (Rule 23)"
        },
        "zero_configuration": {
          "keywords": ["config.json", "config.yaml", "config.ini", ".env", "settings.py"],
          "severity": "warning",
          "message": "Configuration required before use - provide default values"
        },
        "offline_capability": {
          "keywords": ["requests", "urllib", "http", "socket", "network"],
          "severity": "warning",
          "message": "Network dependencies without offline fallback detected"
        }
      }
    },
    "testing_safety": {
      "rules": [7, 14, 59, 69],
      "patterns": {
        "missing_tests": {
          "file_pattern": "*.py",
          "test_pattern": "*test*.py",
          "severity": "warning",
          "message": "No corresponding test file found"
        },
        "error_handling": {
          "keywords": ["try:", "except:", "finally:"],
          "severity": "info",
          "message": "Good error handling detected"
        },
        "missing_error_handling": {
          "ast_pattern": "risky_operations_without_try_catch",
          "severity": "warning",
          "message": "Risky operations without error handling detected"
        },
        "rollback_mechanism": {
          "keywords": ["rollback", "undo", "revert"],
          "severity": "info",
          "message": "Rollback mechanism detected - good for safe updates"
        }
      }
    },
    "code_quality": {
      "rules": [15, 18, 68],
      "patterns": {
        "function_length": {
          "ast_pattern": "long_functions",
          "threshold": 50,
          "severity": "warning",
          "message": "Function exceeds recommended length - consider breaking into smaller functions"
        },
        "naming_conventions": {
          "regex": "[a-z_][a-z0-9_]*",
          "severity": "info",
          "message": "Good naming convention detected"
        },
        "documentation": {
          "keywords": ["\"\"\"", "'''", "# TODO", "# FIXME"],
          "severity": "info",
          "message": "Documentation detected"
        },
        "missing_docstring": {
          "ast_pattern": "functions_without_docstrings",
          "severity": "warning",
          "message": "Function missing docstring - add documentation"
        }
      }
    }
