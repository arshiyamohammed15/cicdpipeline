{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:zeroui:schemas:dry_run_decision:v1",
  "title": "DryRunDecision",
  "description": "Deterministic result payload for /v1/llm/policy/dry-run evaluations.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "decision_id",
    "schema_version",
    "request_id",
    "policy_snapshot_id",
    "policy_version_ids",
    "decision",
    "reasons",
    "simulated_actions",
    "timestamp_utc"
  ],
  "properties": {
    "decision_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]{12,64}$"
    },
    "schema_version": {
      "type": "string",
      "const": "v1"
    },
    "request_id": {
      "type": "string"
    },
    "policy_snapshot_id": {
      "type": "string"
    },
    "policy_version_ids": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1,
      "uniqueItems": true
    },
    "decision": {
      "type": "string",
      "enum": ["ALLOW", "BLOCK", "REQUIRE_SANITISATION", "REQUIRE_REDACTION"]
    },
    "reasons": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "simulated_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["action", "target", "effect"],
        "properties": {
          "action": {
            "type": "string",
            "enum": [
              "clamp_tokens",
              "replace_model",
              "strip_context",
              "block_tool",
              "force_fail_closed"
            ]
          },
          "target": { "type": "string" },
          "effect": { "type": "string" }
        }
      }
    },
    "policy_latency_ms": {
      "type": "integer",
      "minimum": 0
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time"
    }
  }
}

