{
  "name": "zeroui-extension",
  "displayName": "ZeroUI 2.0 Extension",
  "description": "Presentation-only VS Code extension for ZeroUI 2.0 - renders UI from receipts",
  "version": "1.0.0",
  "publisher": "zeroui",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "zeroui.showDecisionCard",
        "title": "Show Decision Card",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.showEvidenceDrawer",
        "title": "Show Evidence Drawer",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.showReceiptViewer",
        "title": "Show Receipt Viewer",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.refresh",
        "title": "Refresh",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.mmm.showDashboard",
        "title": "MMM Engine Dashboard",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.mmm.refresh",
        "title": "MMM Engine Refresh",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.mmm.exportReport",
        "title": "MMM Engine Export Report",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.compliance.showDashboard",
        "title": "Compliance & Security Dashboard",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.compliance.runSecurityScan",
        "title": "Run Security Scan",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.compliance.checkCompliance",
        "title": "Check Compliance",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.compliance.exportReport",
        "title": "Export Security Report",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.validatePrompt",
        "title": "Validate Prompt Against Constitution",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.generateCode",
        "title": "Generate Code with Constitution Validation",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.pscl.preparePlan",
        "title": "Prepare PSCL Build Plan",
        "category": "ZeroUI"
      },
      {
        "command": "zeroui.preCommit.validate",
        "title": "Run Pre-commit Validation",
        "category": "ZeroUI"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "zerouiProblems",
          "name": "ZeroUI Problems",
          "when": "zeroui.hasProblems"
        },
        {
          "id": "zerouiMMMEngine",
          "name": "MMM Engine"
        },
        {
          "id": "zerouiComplianceSecurity",
          "name": "Compliance & Security"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "zeroui.refresh",
          "when": "view == zerouiProblems",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "ZeroUI Constitution Validation",
      "properties": {
        "zeroui.validationServiceUrl": {
          "type": "string",
          "default": "http://localhost:5000",
          "description": "URL of the Constitution Validation Service"
        },
        "zeroui.autoValidatePrompts": {
          "type": "boolean",
          "default": true,
          "description": "Automatically validate prompts before code generation"
        },
        "zeroui.blockOnViolations": {
          "type": "boolean",
          "default": true,
          "description": "Block code generation when constitution violations are detected"
        },
        "zeroui.preferredAIService": {
          "type": "string",
          "enum": [
            "openai",
            "cursor",
            "claude"
          ],
          "default": "openai",
          "description": "Preferred AI service for code generation"
        },
        "zeroui.pscl.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable PSCL plan preparation and pre-commit validation for local workspaces"
        },
        "zeroui.zuRoot": {
          "type": "string",
          "default": "",
          "description": "ZU_ROOT path for storage operations (4-Plane Storage Architecture). If empty, uses ZU_ROOT environment variable."
        },
        "zeroui.repoId": {
          "type": "string",
          "default": "",
          "description": "Repository identifier for receipt storage (kebab-case). If empty, uses workspace name."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js",
    "test:validate-hermetic": "node test/validate-hermetic.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@vscode/test-electron": "^2.3.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.7.7"
  }
}
