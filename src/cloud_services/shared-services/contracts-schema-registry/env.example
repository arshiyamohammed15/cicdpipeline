# Contracts & Schema Registry Module (M34) - Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://zeroui:zeroui_password@localhost:5432/contracts_schema_registry

# Alternative: Individual database components (if not using DATABASE_URL)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=zeroui
# POSTGRES_PASSWORD=zeroui_password
# POSTGRES_DB=contracts_schema_registry

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# Application Configuration
APP_ENV=development
# Options: development, staging, production
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
SERVICE_NAME=contracts-schema-registry
MODULE_ID=M34
MODULE_VERSION=1.2.0

# Security Configuration
# JWT_SECRET_KEY=your-secret-key-here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# External Service Endpoints (for integration)
# IAM Module (M21)
IAM_SERVICE_URL=http://localhost:8001
IAM_SERVICE_TIMEOUT=5

# Key Management Service (M33)
KMS_SERVICE_URL=http://localhost:8002
KMS_SERVICE_TIMEOUT=5

# Evidence Ledger (M27)
EVIDENCE_LEDGER_URL=http://localhost:8003
EVIDENCE_LEDGER_TIMEOUT=5

# Data Plane (M29)
DATA_PLANE_URL=http://localhost:8004
DATA_PLANE_TIMEOUT=5

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SCHEMA=3600
CACHE_TTL_VALIDATION=300
CACHE_TTL_COMPATIBILITY=86400
