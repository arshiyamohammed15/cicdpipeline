{
  "name": "zeroui-2.0",
  "version": "2.0.0",
  "description": "ZeroUI 2.0 Comprehensive Test Suite",
  "private": true,
  "scripts": {
    "test:python": "pytest -q",
    "test:python:quick": "pytest -q -m \"not slow and (unit or smoke)\"",
    "test:python:full": "pytest -q",
    "test:python:coverage": "pytest --cov=validator --cov-report=html --cov-report=term-missing",
    "test:validator": "python -m pytest tests -k \"constitution\" --cov=validator --cov-report=term-missing -v",
    "test:llm-gateway:unit": "pytest tests/llm_gateway -m \"llm_gateway_unit\" -q",
    "test:llm-gateway:integration": "pytest tests/llm_gateway -m \"llm_gateway_integration\" -q",
    "test:llm-gateway:real-services": "pytest tests/llm_gateway -m \"llm_gateway_real_integration\" -v",
    "test:llm-gateway:performance": "k6 run tools/k6/llm_gateway_safe_flow.js",
    "test:llm-gateway:performance:windows": "tools\\k6\\k6-v0.48.0-windows-amd64\\k6.exe run tools/k6/llm_gateway_safe_flow.js",
    "test:llm-gateway:observability": "python scripts/ci/validate_llm_gateway_observability.py",
    "test:llm-gateway:observability:ci": "python scripts/ci/run_llm_gateway_telemetry_scenario.py artifacts/llm_gateway_telemetry.log && python scripts/ci/validate_llm_gateway_observability.py artifacts/llm_gateway_telemetry.log",
    "test:storage": "jest --config jest.config.js --testPathPattern=storage",
    "test:storage:watch": "jest --config jest.config.js --testPathPattern=storage --watch",
    "test:storage:coverage": "jest --config jest.config.js --testPathPattern=storage --coverage",
    "build:typescript": "tsc -p tsconfig.config.json && npm run verify:infra-config",
    "verify:infra-config": "powershell -ExecutionPolicy Bypass -File scripts/di_config_verify.ps1",
    "test:typescript": "npm run build:typescript && npm run test:storage",
    "test:constitution:count": "python tools/test_registry/constitution_test_counter.py",
    "test:constitution:report": "python tools/test_registry/dynamic_test_reporter.py",
    "test:constitution:report:json": "python tools/test_registry/dynamic_test_reporter.py --format json",
    "test:manifest": "python tools/test_registry/generate_manifest.py",
    "test:manifest:update": "python tools/test_registry/generate_manifest.py --update",
    "test:fast": "python tools/test_registry/test_runner.py",
    "test:fast:security": "python tools/test_registry/test_runner.py --marker security --parallel",
    "test:fast:unit": "python tools/test_registry/test_runner.py --marker unit --parallel",
    "test:fast:clear-cache": "python tools/test_registry/clear_cache.py",
    "test:all": "python run_all_tests_complete.py",
    "test:all:quick": "python run_all_tests_quick.py",
    "test:quick": "python test_quick.py",
    "test:all:powershell": "powershell -ExecutionPolicy Bypass -File run_all_tests_one_click.ps1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.17",
    "@types/vscode": "^1.105.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.3"
  }
}
