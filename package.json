{
  "name": "zeroui-2.0",
  "version": "2.0.0",
  "description": "ZeroUI 2.0 Comprehensive Test Suite",
  "private": true,
  "scripts": {
    "test:python": "pytest -q",
    "test:python:quick": "pytest -q -m \"not slow and (unit or smoke)\"",
    "test:python:full": "pytest -q",
    "test:python:coverage": "pytest --cov=validator --cov-report=html --cov-report=term-missing",
    "test:validator": "pytest validator/rules/tests --cov=validator --cov-report=term-missing -v",
    "test:all": "python run_all_tests.py"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "typescript": "^5.3.3"
  }
}
