{
  "name": "zeroui-2.0",
  "version": "2.0.0",
  "description": "ZeroUI 2.0 Comprehensive Test Suite",
  "private": true,
  "scripts": {
    "test:python": "pytest -q",
    "test:python:quick": "pytest -q -m \"not slow and (unit or smoke)\"",
    "test:python:full": "pytest -q",
    "test:python:coverage": "pytest --cov=validator --cov-report=html --cov-report=term-missing",
    "test:validator": "python -m pytest tests -k \"constitution\" --cov=validator --cov-report=term-missing -v",
    "test:storage": "jest --config jest.config.js --testPathPattern=storage",
    "test:storage:watch": "jest --config jest.config.js --testPathPattern=storage --watch",
    "test:storage:coverage": "jest --config jest.config.js --testPathPattern=storage --coverage",
    "build:typescript": "tsc -p tsconfig.config.json && npm run verify:infra-config",
    "verify:infra-config": "powershell -ExecutionPolicy Bypass -File scripts/di_config_verify.ps1",
    "test:typescript": "npm run build:typescript && npm run test:storage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.17",
    "@types/vscode": "^1.105.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.3"
  }
}
