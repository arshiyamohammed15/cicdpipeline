# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Python test files
[**/test_*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Python __init__ files
[**/__init__.py]
indent_style = space
indent_size = 4
max_line_length = 88

# TypeScript/JavaScript files
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# XML files
[*.xml]
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 2

# CSS files
[*.css]
indent_style = space
indent_size = 2

# SCSS files
[*.scss]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Shell scripts (Unix)
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# PowerShell scripts (Windows) - CRLF required
[*.ps1]
indent_style = space
indent_size = 2
end_of_line = crlf

# Batch files (Windows) - CRLF required
[*.{bat,cmd}]
indent_style = space
indent_size = 2
end_of_line = crlf

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 2

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
indent_size = 4

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# Lock files (keep as-is)
[package-lock.json]
insert_final_newline = false
trim_trailing_whitespace = false

[requirements.lock]
insert_final_newline = false
trim_trailing_whitespace = false

# Binary files
[*.{png,jpg,jpeg,gif,ico,svg,pdf,zip,tar,gz,rar,7z}]
insert_final_newline = false
trim_trailing_whitespace = false

# VS Code extension specific
[src/vscode-extension/**/*.ts]
indent_style = space
indent_size = 2
max_line_length = 100

[src/vscode-extension/**/*.js]
indent_style = space
indent_size = 2
max_line_length = 100

# ZeroUI 2.0 specific patterns
[config/**/*.json]
indent_style = space
indent_size = 2

[validator/**/*.py]
indent_style = space
indent_size = 4
max_line_length = 88

[gsmd/**/*.json]
indent_style = space
indent_size = 2
